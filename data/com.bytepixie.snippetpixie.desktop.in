[Desktop Entry]
Name=Snippet Pixie
Comment=Your little snippet helper
Exec=com.bytepixie.snippetpixie
Icon=com.bytepixie.snippetpixie
Keywords=expand;text;snippet;
Terminal=false
Type=Application
StartupNotify=true
Categories=GTK;Utility;
Actions=Start;Stop;

[Desktop Action Start]
Name=Start Snippet Pixie
Exec=com.bytepixie.snippetpixie --start

[Desktop Action Stop]
Name=Stop Snippet Pixie
Exec=com.bytepixie.snippetpixie --stop
